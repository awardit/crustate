{
  "name": "crustate",
  "version": "0.0.1",
  "description": "Crustate is a message-based modular state-management library.",
  "keywords": [
    "elm",
    "flux",
    "functional",
    "immutable",
    "message",
    "react",
    "reactjs",
    "server-side-rendering",
    "ssr",
    "state"
  ],
  "author": "Martin Wernst√•l <m4rw3r@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/m4rw3r/crustate.git"
  },
  "bugs": "https://github.com/m4rw3r/crustate/issues",
  "homepage": "https://github.com/m4rw3r/crustate",
  "license": "MIT",
  "files": [
    "dist",
    "preact/dist",
    "preact/package.json",
    "preact/src",
    "react/dist",
    "react/package.json",
    "react/src",
    "src"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "source": "src/index.js",
  "scripts": {
    "ava": "ava --verbose",
    "build": "npm-run-all build:*",
    "build:rollup": "rollup -c rollup.config.js",
    "build:flowstub": "cp resources/flowstub.js dist/index.js.flow && cp resources/flowstub.js dist/index.mjs.flow && cp resources/flowstub.js react/dist/index.js.flow && cp resources/flowstub.js react/dist/index.mjs.flow && cp resources/flowstub.js preact/dist/index.js.flow && cp resources/flowstub.js preact/dist/index.mjs.flow",
    "clean": "rm -rf dist react/dist preact/dist examples/counter/dist",
    "coverage": "nyc --reporter=html ava --verbose",
    "dist": "cross-env NODE_ENV=production npm run build",
    "distclean": "rm -rf package-lock.json node_modules dist react/dist preact/dist examples/counter/dist",
    "examples": "http-server -c-1 examples",
    "flow": "flow check",
    "prepare": "npm run clean && npm run test && npm run dist",
    "test": "npm-run-all test:*",
    "test:flow": "flow status",
    "test:ava": "ava",
    "watch": "nodemon -w src -w test -w react/src --exec \"npm run -q test || true\"",
    "watch-build": "rollup -c rollup.config.js -w",
    "watch-test": "nodemon -w src -w test -w react/src --exec \"npm run -q ava || true\"",
    "watch-coverage": "nodemon -w src -w test -w react/src --exec \"npm run -q coverage || true\""
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.9.0",
    "@babel/core": "7.4.3",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "@babel/plugin-transform-classes": "7.4.3",
    "@babel/plugin-transform-flow-strip-types": "7.4.0",
    "@babel/preset-env": "7.4.3",
    "@babel/preset-react": "7.0.0",
    "@babel/register": "7.4.0",
    "ava": "1.4.1",
    "cross-env": "5.2.0",
    "flow-bin": "0.97.0",
    "http-server": "0.11.1",
    "ninos": "2.0.2",
    "nodemon": "1.18.11",
    "npm-run-all": "4.1.5",
    "nyc": "13.3.0",
    "preact": "10.0.0-alpha.3",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "rollup": "1.10.0",
    "rollup-plugin-alias": "1.5.1",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.3.4",
    "rollup-plugin-gzip": "2.2.0",
    "rollup-plugin-node-resolve": "4.2.3",
    "rollup-plugin-postcss": "2.0.3",
    "rollup-plugin-replace": "2.2.0"
  },
  "ava": {
    "babel": {
      "testOptions": {
        "presets": [
          [
            "@babel/preset-react"
          ],
          [
            "@babel/preset-env",
            {
              "loose": true,
              "shippedProposals": true,
              "targets": {
                "node": "current",
                "firefox": "50",
                "ie": "11"
              },
              "exclude": [
                "transform-typeof-symbol"
              ]
            }
          ]
        ],
        "plugins": [
          [
            "@babel/plugin-transform-flow-strip-types"
          ],
          [
            "@babel/plugin-proposal-class-properties",
            {
              "loose": true
            }
          ]
        ]
      }
    },
    "files": [
      "**/*.test.js"
    ],
    "sources": [
      "src/**/*.js",
      "**/src/**/*.js"
    ],
    "require": [
      "./test/_register"
    ],
    "powerAssert": true
  }
}
